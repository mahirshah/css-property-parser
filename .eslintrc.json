{
  "parserOptions": {
    "ecmaVersion": 7
  },
  "env": {
    "node": true
  },
  "extends": "airbnb",
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-bitwise": [
      "error",
      {
        "allow": [
          "~"
        ]
      }
    ],
    "no-underscore-dangle": "off",
    "no-shadow": "off",
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "ignore"
    }],
    "global-require": "off",
    "valid-jsdoc": "error"
  }
}